MAIN	START
	LAD	GR1,IN1		; GR1に1つめの引数が入っているアドレスを
	LAD	GR2,IN2		; GR2に2つめの引数が入っているアドレスを
	LAD	GR3,ANS		; GR3に答えをいれてもらうアドレスを
	CALL	ADDER
	LD	GR3,ANS		; サブルーチンの答えをGR3にロード
	CPA	GR3,=5		; GR3が正しく5になっているかチェック
	JNZ	NG
	OUT	OKMSG,OKLEN
	JUMP	FIN
NG	OUT	NGMSG,NGLEN
FIN	RET
IN1	DC	3
IN2	DC	2
ANS	DS	1
NGMSG	DC	'WRONG!'
NGLEN	DC	6
OKMSG	DC	'CORRECT!'
OKLEN	DC	8
	END

ADDER	START
	LD	GR4,0,GR1
	ADDA	GR4,0,GR2
	ST	GR4,0,GR3
	RET
	END
